
(import modules/math)

(defsyntax (enum $name ($$stuff))
  (var (i 0))
  `(statements
     ,@(map (lambda (nm)
              (list 'def
                    (symbol (str (name $name) "-" (name nm)))
                    (bitwise-left-shift 1 (i @<++>))))
            $$stuff)))

(defsyntax (flags $$nums)
  `(bitwise-or ,@(if $$nums $$nums '(0))))

(defsyntax (flag-get $flags $flag)
  `(bitwise-and ,$flags, $flag))
